<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
                     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>CS 213 Week 06 Ponder and Prove</title>
    <script type="text/javascript" src="parsingfunctions.js"></script>
    <style type="text/css">
	  form, pre {
		  margin-left:20px; 
		  font-family:Verdana, Geneva, sans-serif; 
          padding:6px;
          width: 550px;
          font-size: 12;
	      border: 1px solid rgb(0, 90, 136); 
          border-radius: 4px;
	  }
	  h2 {
		  border-bottom-style: solid;
	  }
	</style>
  </head>
  
<body>
    <!-- First problem: Age -->
	<h2>#1: Age</h2>
    <p>Please indicate your age: 0-118 years</p>
    <form action="" id="form1">
 	  <table>
        <tr>
          <td>
            <input name="age1" 
                   onkeyup="validateAge(document.getElementById('form1').elements.namedItem('age1').value,
                                        'form1span1', true);"
                   size="3"/>
          </td>
          <td><span id="form1span1" style='color:red'>Invalid age</span></td>
        </tr>
        <tr>
          <td>
            <input name="age2" 
                   onkeyup="validateAge(document.getElementById('form1').elements.namedItem('age2').value,
                                        'form1span2', true);"
                   size="3"/>
          </td>
          <td><span id="form1span2" style='color:red'>Invalid age</span></td>
        </tr>
      </table>
    </form>
    
    <!-- Second problem: SSN -->
	<h2>#2: SSN</h2>
    <p>Please enter a Social Security Number: 000-00-0000</p>
    <form action="" id="form2">
      <table>
        <tr>
          <td>
            <input name="ssn1"
                   onkeyup="validateSSN(document.getElementById('form2').elements.namedItem('ssn1').value,
                                        'form2span1', true);" 
                   size="11"/>
          </td>
          <td><span id="form2span1" style='color:red'>Invalid SSN</span></td>
        </tr>
        <tr>
          <td>
              <input name="ssn2"
                     onkeyup="validateSSN(document.getElementById('form2').elements.namedItem('ssn2').value,
                                        'form2span2', true);"
                     size="11" />
          </td>
          <td><span id="form2span2" style='color:red'>Invalid SSN</span></td>
        </tr>
      </table>
    </form>
    
    <!-- Third problem: Credit Card Number -->
	<h2>#3: Credit Card Number</h2>
    <p>Please enter a credit card number: 0000 0000 0000 0000</p>
    <form action="" id="form3">
      <table>
        <tr>
          <td>
              <input name="ccn1"
                     onkeyup="validateCreditCard(document.getElementById('form3').elements.namedItem('ccn1').value,
                                        'form3span1', true);"  
                     size="19" />
          </td>
          <td><span id="form3span1" style='color:red'>Invalid credit card number</span></td>
        </tr>
        <tr>
          <td>
              <input name="ccn2"
                     onkeyup="validateCreditCard(document.getElementById('form3').elements.namedItem('ccn2').value,
                                        'form3span2', true);"
                     size="19" />
          </td>
          <td><span id="form3span2" style='color:red'>Invalid credit card number</span></td>
        </tr>
      </table>
    </form>
    
    <!-- Fourth problem: Date -->
	<h2>#4: Date</h2>
    <p>Please enter a date: m/d/yyyy</p>
    <form action="" id="form4">
      <table>
        <tr>
          <td>
              <input name="date1"
                     onkeyup="validateDate(document.getElementById('form4').elements.namedItem('date1').value,
                                        'form4span1', true);"
                     size="9" />
          </td>
          <td><span id="form4span1" style='color:red'>Invalid date</span></td>
        </tr>
        <tr>
          <td>
              <input name="date2"
                     onkeyup="validateDate(document.getElementById('form4').elements.namedItem('date2').value,
                                        'form4span2', true);"
                     size="9" />
          </td>
          <td><span id="form4span2" style='color:red'>Invalid date</span></td>
        </tr>
      </table>
    </form>
    
    <!-- Fifth problem: Abbreviation -->
	<h2>#5: State Abbreviation</h2>
    <p>Please enter a 2-letter state abbreviation</p>
    <form action="" id="form5">
      <table>
        <tr>
          <td>
              <input id="abbr1" 
                     onkeyup="validateStateAbbreviation(document.getElementById('form5').elements.namedItem('abbr1').value,
                                        'form5span1', true);"
                     size="2"  />
          </td>
          <td ><span id="form5span1" style='color:red'>Invalid state abbreviation</span></td>
        </tr>
        <tr>
          <td>
              <input id="abbr2" 
                     onkeyup="validateStateAbbreviation(document.getElementById('form5').elements.namedItem('abbr2').value,
                                        'form5span2', true);"
                     size="2"  />
          </td>
          <td ><span id="form5span2" style='color:red'>Invalid state abbreviation</span></td>
        </tr>
      </table>
    </form>

    <!-- Sixth problem: Money  -->
	<h2>#6: Dollar Amount</h2>
    <p>Please enter an amount in US dollars</p>
    <form action="" id="form6">
      <table>
        <tr>
          <td>
              <input id="value1" 
                     onkeyup="validateMoney(document.getElementById('form6').elements.namedItem('value1').value,
                                        'form6span1', true);"
                     size="10" />
          </td>
          <td><span id="form6span1" style='color:red'>Invalid money amount</span></td>
        </tr>
        <tr>
          <td>
              <input id="value2"
                     onkeyup="validateMoney(document.getElementById('form6').elements.namedItem('value2').value,
                                        'form6span2', true);"
                     size="10" />
          </td>
          <td><span id="form6span2" style='color:red'>Invalid money amount</span></td>
        </tr>
      </table>
    </form>
  </body>
</html>
